<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.reliance.multipleshapeimageview.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.reliance.multipleshapeimageview.MultipleShapeImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/msv_shper1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:image_scale_type="fillXF"
            app:multi_image="@mipmap/timg" />

        <com.reliance.multipleshapeimageview.MultipleShapeImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/msv_shper2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:image_scale_type="fillXF"
            app:multi_image="@mipmap/timg" />

        <com.reliance.multipleshapeimageview.MultipleShapeImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/msv_shper3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:image_scale_type="fillXF"
            app:multi_image="@mipmap/timg" />

        <com.reliance.multipleshapeimageview.MultipleShapeImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/msv_shper4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:image_scale_type="fillXF"
            app:multi_image="@mipmap/timg" />
        app:multi_image="@mipmap/timg" />

        <com.reliance.multipleshapeimageview.MultipleShapeImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/msv_shper5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:image_scale_type="fillXF"
            app:multi_image="@mipmap/timg" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
